<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@color/colorbackground"
            android:orientation="vertical">


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sixty_four">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/thirty_two"
                    android:layout_marginTop="@dimen/thirty_two"
                    android:layout_marginRight="@dimen/thirty_two"
                    android:clickable="true"
                    android:elevation="8dp"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:onClick="mobileLoginVerification"
                    android:padding="15dp"
                    android:text="Login with Registered Mobile "
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sixteen"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/or"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mobile"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="15dp"
                    android:text="OR"
                    android:textColor="@color/nav_active"
                    android:textSize="15dp" />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/facebook_login"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/or"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_icons8_facebook_old"
                    android:drawablePadding="10dp"
                    android:elevation="8dp"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:padding="13dp"
                    android:text="Facebook"
                    android:textAlignment="center"
                    android:textColor="#BC000000"
                    android:textStyle="bold" />


                <com.google.android.gms.common.SignInButton
                    android:id="@+id/google_login"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/facebook_login"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/border"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_icons8_google"
                    android:drawablePadding="10dp"
                    android:elevation="8dp"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    android:text="Google"
                    android:textAlignment="center"
                    android:textColor="#BC000000"
                    android:textStyle="bold" />


                <androidx.cardview.widget.CardView xmlns:card_view="https://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    card_view:cardBackgroundColor="#E6E6E6"
                    card_view:cardCornerRadius="8dp"
                    card_view:cardElevation="8dp"
                    android:background="@drawable/border"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:focusable="true">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/montserrat"
                        android:onClick="tempMainActivity"
                        android:text="@string/termscondition" />


                </androidx.cardview.widget.CardView>


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>