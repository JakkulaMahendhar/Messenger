<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DotProgressBar">
        <attr name="color" format="color" />
        <attr name="count" format="integer" />
        <attr name="timeout" format="integer" />
    </declare-styleable>

    <attr name="primaryTextColor" format="reference" />
    <attr name="buttonNormalColor" format="reference" />~
    <attr name="buttonHighlightColor" format="reference" />
    <attr name="buttonTextColor" format="reference" />
    <attr name="iconColor" format="reference" />

    <attr name="textViewStyle" format="reference" />
    <attr name="primaryButtonTheme" format="reference" />

    <declare-styleable name="CustomCheckBox">
        <attr name="duration" format="integer" />
        <attr name="stroke_width" format="dimension" />
        <attr name="color_tick" format="color" />
        <attr name="color_checked" format="color" />
        <attr name="color_unchecked" format="color" />
        <attr name="color_unchecked_stroke" format="color" />
        <attr name="small_tick" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RippleBackground">
        <attr name="rb_color" format="color" />
        <attr name="rb_strokeWidth" format="dimension"/>
        <attr name="rb_radius" format="dimension"/>
        <attr name="rb_duration" format="integer"/>
        <attr name="rb_rippleAmount" format="integer"/>
        <attr name="rb_scale" format="float"/>
        <attr name="rb_type" format="enum">
            <enum name="fillRipple" value="0"/>
            <enum name="strokeRipple" value="1"/>
        </attr>
    </declare-styleable>
</resources>